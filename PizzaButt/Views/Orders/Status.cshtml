
@{
    ViewData["Title"] = "Orders";
}
@model IEnumerable<OrderModel>

<div style="height: 100%; display: flex; flex-direction: column; justify-content: space-between;">
<div class="tablez" style="margin-top: 10px">
    <h1 style="text-align: center;">Pending Orders</h1>
    <table class="table" style="width: 80%; margin: auto;">
        <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Order</th>
            <th scope="col">Size</th>
            <th scope="col">Toppings</th>
            <th scope="col">Quantity</th>
            <th scope="col">Special Instructions</th>
            <th scope="col">Order Time</th>
            <th scope="col">Status</th>
            <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            if (item.Status == "Pending")
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Order
                    </td>
                    <td>
                        @if (item.Size == null)
                        {
                            <Text>N/A</Text>
                        }
                        else
                        {
                            <Text>@item.Size</Text>
                        }
                    </td>
                    <td>
                        @{
                            if (item.Toppings != null)
                            {
                                var last = item.Toppings.Last();
                                foreach (var topping in item.Toppings)
                                {
                                    if (topping == last)
                                    {
                                        <Text>@topping</Text>
                                    }
                                    else
                                    {
                                        <Text>@topping, </Text>
                                    }
                                }
                            }
                        }
                    </td>
                    <td>
                        @item.Quantity
                    </td>
                    <td>
                        @item.SpecialInstructions
                    </td>
                    <td>
                        @item.CreateTime
                    </td>
                    <td>
                        @item.Status
                    </td>
                    <td>
                        <button type="button" class="btn btn-success" onclick="location.href = '@Url.Action("Start", "Orders", new {orderId = item.Id.ToString()})'">Start Order</button>
                    </td>
                </tr>
            }
        }
        </tbody>
    </table>
</div>
