<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/vendor.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="order-status">
<nav class="navbar navbar-expand-lg activeNav navbar-primary bg-primary">
    <li asp-area="" asp-controller="Home" asp-action="Index" class="nav-brand">
        <a style="color: #fff; margin-right: 20px; margin-left: 16px; font-size: 18px">Cathedral Pizza</a>
    </li>
    <ul class="navbar-nav">
        <li class="nav-item">
            <a asp-area="" class="nav-link" style="color: #fff; margin-right: 20px; margin-left: 20px; font-size: 18px; font-weight: 300" asp-controller="Home" asp-action="Index">Home</a>
        </li>
        <li class="nav-item">
            <a asp-area="" class="nav-link" style="color: #fff; margin-right: 20px; margin-left: 20px; font-size: 18px; font-weight: 300" asp-controller="Orders" asp-action="Status">Orders</a>
        </li>
    </ul>
</nav>
<div>
    @RenderBody()
    <div style="position: absolute; left: 0; font-size: 14px; bottom: 0; width: 100%; ">

    </div>
</div>

<hr/>
<footer>
    <p>&copy; 2018 - MenuSys</p>
</footer>
@RenderSection("Scripts", required: false)
<script src="~/vendor.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
</body>

</html>