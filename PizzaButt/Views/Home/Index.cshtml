@{
    ViewData["Title"] = "Order Pizza";
    Layout = "_Layout";
}
@model CodeViewModel
<header>
    @await Html.PartialAsync("../Shared/NavHomePartial.cshtml")
    <div class="hero-text-box">
        <h1 style="color: #fff; font-size: 72px; font-weight: 300" class="animated fadeInLeft">Cathedral Kitchen</h1>
        <h2 style="color: #fff; font-weight: 300;" class="animated fadeInLeft">Thank you for being a part of our team</h2>
        <button type="button" class="btn btn-primary btn-lg js--scroll-to-order animated fadeIn" style="margin-top: 10px; position: relative; top: 50%; left: 33%;" href="#">Place order</button>
    </div>
</header>
<div class="order-section scrollable js--order-section">
    <div class="row" style="margin-top: 25px;">
        <div class="form-group col-md-4 offset-md-4">
            <h3 style="font-size: 36px; font-weight: 700; text-align: center">Enter Daily Code</h3>
        </div>
    </div>
    <div class="row">
        <form style="margin-top: 70px;" class="orderForm col-8" id="checkoutForm" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="form-group col-md-6 offset-md-6">
                    <div style="color:red;">@Html.ValidationMessage("error")</div>
                    <input asp-for="Code" type="text" class="form-control boxStyle" id="nameInput" placeholder="Enter Code" required />
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-6 offset-md-6">
                    <button type="submit" id="activateNav" class="btn btn-primary activateNav">Submit code</button>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts
    {
    <script src="~/lib/signalr/signalr.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.17.0/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/chat.js"></script>
}