@{
    ViewData["Title"] = "Order Pizza";
}
@model IEnumerable<MenuItem>


<header>
    <nav class="navbar navbar-expand-lg homeNav navbar-primary">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" style="color: #fff; margin-right: 20px; margin-left: 16px; font-size: 18px;" asp-controller="Home" asp-action="Index">Cathedral Pizza</a>
            </li>
            <li class="nav-item">
                <a asp-area="" class="nav-link" style="color: #fff; margin-right: 20px; margin-left: 20px; font-size: 18px; font-weight: 300" asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li class="nav-item">
                <a asp-area="" class="nav-link" style="color: #fff; margin-right: 20px; margin-left: 20px; font-size: 18px; font-weight: 300" asp-controller="Orders" asp-action="Status">Orders</a>
            </li>
        </ul>
    </nav>

    <div class="hero-text-box">
        <h1 style="color: #fff; font-size: 72px; font-weight: 300" class="animated fadeInLeft">Cathedral Pizza</h1>
        <h2 style="color: #fff; font-weight: 300;" class="animated fadeInLeft">Thank you for being a part of our team</h2>
        <button type="button" class="btn btn-primary btn-lg js--scroll-to-order animated fadeIn" style="margin-top: 10px; position: relative; top: 50%; left: 33%;" href="#">Place order</button>
    </div>
</header>

<div class="order-section scrollable js--order-section">
    <div class="row" style="margin-top: 25px;">
        <div class="form-group col-md-4 offset-md-4">
            <h3 style="font-size: 36px; font-weight: 700; text-align: center">Place an order </h3>
        </div>
    </div>

    <form style="margin-top: 25px;" class="orderForm" method="post">
        @**************************@
        @*          NAME          *@
        @**************************@
        <div class="row">
            <div class="form-group offset-md-4 col-md-4">
                <label class="titleTag"for="nameInput">Name</label>
                <input type="text" class="form-control" id="nameInput" aria-describedby="emailHelp" placeholder="Enter Name" name="name"/>
                @Html.ValidationMessage("This field is required")
            </div>
        </div>
        @**************************@
        @*       MENUITEMS        *@
        @**************************@
        <div class="row">
            <div class="form-group offset-md-4 col-md-4">
                <label class="titleTag" for="menuSelect">Menu</label>
                <select class="form-control" id="menuSelect" name="order">
                    <option>--</option>
                    @foreach (var item in Model)
                    {
                        <option value="@item.Name">@Html.DisplayFor(model => item.Name)</option>
                    }
                </select>
            </div>
        </div>
        @**************************@
        @*      TACOSAUCES        *@
        @**************************@
        <div class="row">
            <div id="sauceForTaco" class="form-group offset-md-4 col-md-4">
                <label class="titleTag">Taco Sauces</label>
                <div class="row">
                    <label class="checkbox-inline offset-md-1 col-md-5"><input name="toppings" type="checkbox" value="Hot Sauce"/>Hot Sauce (VERY HOT!)</label>
                    <label class="checkbox-inline col-md-5"><input name="toppings" type="checkbox" value="Salsa Verde"/>Salsa Verde</label>
                </div>
            </div>
        </div>
        @**************************@
        @*      TACOEXTRAS        *@
        @**************************@
        <div class="row">
            <div id="extrasForTaco" class="form-group offset-md-4 col-md-4">
                <label class="titleTag">Taco Extras</label>
                <div class="row">
                    <label class="checkbox-inline offset-md-1 col-md-5"><input name="toppings" type="checkbox" value="Cheese"/>Cheese</label>
                    <label class="checkbox-inline col-md-5"><input name="toppings" type="checkbox" value="Lettuce"/>Lettuce</label>
                </div>
                <div class="row">
                    <label class="checkbox-inline offset-md-1 col-md-5"><input name="toppings" type="checkbox" value="Jalepenos"/>Jalapeños</label>
                </div>
            </div>
        </div>
        @**************************@
        @*        PIZZASIZE       *@
        @**************************@
        <div class="row">
            <div id="sizesForPizza" class="form-group offset-md-4 col-md-4">
                <label class="titleTag" for="sizesForPizza">Pizza Size</label>
                <div class="row">
                    <label class="radio-inline offset-md-1 col-md-3"><input value="Small" type="radio" name="size"/>Small</label>
                    <label class="radio-inline col-md-4"><input value="Medium" type="radio" name="size"/>Medium</label>
                    <label class="radio-inline col-md-4"><input value="Large" type="radio" name="size"/>Large</label>
                </div>
            </div>
        </div>
        @**************************@
        @*     PIZZATOPPINGS      *@
        @**************************@
        <div class="row">
            <div id="toppingsForPizza" class="form-group offset-md-4 col-md-4">
                <label class="titleTag">Pizza Toppings</label>
                <label class="titleTag">Meats</label>
                <div class="row">
                    <label class="checkbox-inline offset-md-1 col-md-5"><input name="toppings" type="checkbox" value="Extra Cheese"/>Extra Cheese</label>
                    <label class="checkbox-inline col-md-5"><input name="toppings" type="checkbox" value="Pepperoni"/>Pepperoni</label>
                </div>
                <div class="row">
                    <label class="checkbox-inline offset-md-1 col-md-5"><input name="toppings" type="checkbox" value="Beef"/>Beef</label>
                    <label class="checkbox-inline col-md-5"><input name="toppings" type="checkbox" value="Canadian Bacon"/>Canadian Bacon</label>
                </div>
                <div class="row">
                    <label class="checkbox-inline offset-md-1 col-md-5"><input name="toppings" type="checkbox" value="Bacon"/>Bacon</label>
                </div>
                <div>
                    <label class="titleTag">Non-meats</label>
                    <div class="row">
                        <label class="checkbox-inline offset-md-1 col-md-5"><input name="toppings" type="checkbox" value="Pineapple"/>Pineapple</label>
                        <label class="checkbox-inline col-md-5"><input name="toppings" type="checkbox" value="Jalepenos"/>Jalapeños</label>
                    </div>
                    <div class="row">
                        <label class="checkbox-inline offset-md-1 col-md-5"><input name="toppings" type="checkbox" value="Hot Sauce"/>Hot Sauce (VERY HOT!)</label>
                        <label class="checkbox-inline col-md-5"><input name="toppings" type="checkbox" value="Salsa Verde"/>Salsa Verde</label>
                    </div>
                    <div class="row">
                        <label class="checkbox-inline offset-md-1 col-md-5"><input name="toppings" type="checkbox" value="Onions"/>Onions</label>
                    </div>
                </div>
            </div>
        </div>
        @**************************@
        @*       QUANTITY         *@
        @**************************@
        <div class="row">
            <div class="form-group offset-md-4 col-md-4">
                <label class="titleTag" for="qtyInput">Qty.</label>
                <input type="number" minValue="1" class="form-control" id="qtyInput" aria-describedby="emailHelp" name="quantity"/>
                @Html.ValidationMessage("This field is required")
            </div>
        </div>
        @**************************@
        @*        COMMENTS        *@
        @**************************@
        <div class="row">
            <div class="form-group offset-md-4 col-md-4">
                <div class="form-group">
                    <label class="titleTag" for="specialInstructionsInput">Special Instructions</label>
                    <textarea class="form-control" id="specialInstructionsInput" aria-describedby="emailHelp" name="specialInstructions">
        </textarea>
                    @Html.ValidationMessage("This field is required")
                </div>
            </div>
        </div>
        @**************************@
        @*        SUBMIT          *@
        @**************************@
        <div class="row">
            <div class="form-group offset-md-4 col-md-4">
                <button type="button" id="activateNav" class="btn btn-primary activateNav">Submit</button>
            </div>
        </div>
    </form>
</div>
