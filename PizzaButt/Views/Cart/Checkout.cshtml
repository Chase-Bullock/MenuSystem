@{
    ViewData["Title"] = "Order Pizza";
}
@model CartViewModel


@await Html.PartialAsync("../Shared/NavHomePartial.cshtml")

<div class="order-section scrollable">
    <div class="row" style="margin-top: 25px;">
        <div class="form-group col-md-4 offset-md-4">
            <h3 style="font-size: 36px; font-weight: 700; text-align: center">Checkout</h3>
        </div>
    </div>
    <div class="row">
        <form style="margin-top: 70px;" class="orderForm col-8" id="checkoutForm" method="post">
            @* TODO: Add community region info
                <div class="row">
                <div class="form-group col-md-6 offset-md-4">
                    <label asp-for="CommunityId" class="titleTag" for="communityId">Community</label>
                    <select asp-for="CommunityId" class="form-control" id="communityId" name="communityId">
                        <option value="" disabled selected hidden> -- </option>
                        @foreach(var community in Model.Communities)
                        {
                           <option value=@community.Id>@community.Name</option>
                        }
                    </select>
                    <span asp-validation-for="CommunityId" class="text-danger"></span>
                </div>
            </div>*@
            @**************************@
            @*          NAME          *@
            @**************************@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="form-group col-md-6 offset-md-4">
                    <label asp-for="Name" class="titleTag">Name</label>
                    <input asp-for="Name" type="text" class="form-control boxStyle" id="nameInput" aria-describedby="emailHelp" placeholder="Enter Name" name="name" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            @**************************@
            @*      ADDRESSLINE1      *@
            @**************************@
            <div class="row">
                <div class="form-group col-md-6 offset-md-4">
                    <label asp-for="AddressLine1" class="titleTag">Address Line 1</label>
                    <input asp-for="AddressLine1" type="text" class="form-control boxStyle" id="nameInput" aria-describedby="emailHelp" placeholder="Enter Address" name="addressLine1" required />
                    <span asp-validation-for="AddressLine1" class="text-danger"></span>
                </div>
            </div>
            @**************************@
            @*      ADDRESSLINE2      *@
            @**************************@
            <div class="row">
                <div class="form-group col-md-6 offset-md-4">
                    <label asp-for="AddressLine2" class="titleTag">Address Line 2</label>
                    <input asp-for="AddressLine2" type="text" class="form-control boxStyle" id="nameInput" aria-describedby="emailHelp" placeholder="Enter Address" name="addressLine2" />
                    <span asp-validation-for="AddressLine2" class="text-danger"></span>
                </div>
            </div>
            @**************************@
            @*          CITY          *@
            @**************************@
            <div class="row">
                <div class="form-group col-md-6 offset-md-4">
                    <label asp-for="City" class="titleTag">City</label>
                    <input asp-for="City" type="text" class="form-control boxStyle" id="nameInput" aria-describedby="emailHelp" placeholder="Enter City" name="city" required />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
            </div>
            @*************************@
            @*        ZIPCODE        *@
            @*************************@
            <div class="row">
                <div class="form-group col-md-6 offset-md-4">
                    <label asp-for="Zipcode" class="titleTag">Zipcode</label>
                    <input asp-for="Zipcode" type="text" class="form-control boxStyle" id="nameInput" aria-describedby="emailHelp" placeholder="Enter Zipcode" name="zipcode" required />
                    <span asp-validation-for="Zipcode" class="text-danger"></span>
                </div>
            </div>
            @**************************@
            @*        COMMENTS        *@
            @**************************@
            <div class="row">
                <div class="form-group col-md-6 offset-md-4">
                    <div class="form-group">
                        <label class="titleTag" for="specialInstructionsInput">Special Instructions</label>
                        <textarea class="form-control" id="specialInstructionsInput" aria-describedby="emailHelp" name="note">
                </textarea>
                    </div>
                </div>
            </div>
            @**************************@
            @*        SUBMIT          *@
            @**************************@
            <div class="row">
                <div class="form-group col-md-6 offset-md-4">
                    <button type="submit" id="activateNav" class="btn btn-primary activateNav">Place Order</button>
                </div>
            </div>
        </form>
    </div>
</div>
<script src="~/lib/signalr/signalr.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
<script src="~/js/chat.js"></script>
